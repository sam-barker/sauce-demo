{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins": ["@typescript-eslint"],
    "extends": [
        "airbnb-typescript",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "quotes": [
          "error",
          "single",
          {
            "avoidEscape": true
          }
        ],
        "curly": [
          "error",
          "all"
        ],
        "import/no-default-export": 0,
        "import/prefer-default-export": 0,
        "import/no-extraneous-dependencies": 0,
        "class-methods-use-this": 0
      }
  }
